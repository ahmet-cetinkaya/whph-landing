---
interface Testimonial {
  quote: string;
  author: string;
  role: string;
  avatar?: string;
}

interface Stat {
  label: string;
  value: string;
  icon: string;
}

const testimonials: Testimonial[] = [
  {
    quote: "WHPH transformed how I manage my daily productivity. The habit tracking feature alone has helped me build consistent routines that stick.",
    author: "Sarah Chen",
    role: "Product Manager"
  },
  {
    quote: "Finally, a productivity app that respects my privacy! Local data storage with optional sync is exactly what I needed for sensitive work projects.",
    author: "Marcus Rodriguez", 
    role: "Software Developer"
  },
  {
    quote: "The time analytics feature opened my eyes to how I actually spend my time. Now I can make data-driven decisions about my productivity habits.",
    author: "Dr. Emma Thompson",
    role: "Research Scientist"
  }
];

const stats: Stat[] = [
  {
    label: "GitHub Stars",
    value: "1.2k+",
    icon: "star"
  },
  {
    label: "Downloads",
    value: "5k+", 
    icon: "download"
  },
  {
    label: "Active Users",
    value: "2.8k+",
    icon: "users"  
  },
  {
    label: "Contributors",
    value: "12+",
    icon: "contributors"
  }
];
---

<div class="social-proof">
  <!-- Statistics Section -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-16">
    {stats.map((stat) => (
      <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-whph shadow-sm border border-gray-200 dark:border-gray-700">
        <div class="flex justify-center mb-3">
          {stat.icon === 'star' && (
            <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          )}
          {stat.icon === 'download' && (
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          )}
          {stat.icon === 'users' && (
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
          )}
          {stat.icon === 'contributors' && (
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          )}
        </div>
        <div class="text-2xl font-bold text-gray-900 dark:text-white mb-1">
          {stat.value}
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          {stat.label}
        </div>
      </div>
    ))}
  </div>

  <!-- Testimonials Section -->
  <div class="grid md:grid-cols-3 gap-8">
    {testimonials.map((testimonial) => (
      <div class="bg-white dark:bg-gray-800 rounded-whph-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
        <!-- Quote -->
        <div class="mb-6">
          <svg class="w-8 h-8 text-primary mb-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"></path>
          </svg>
          <blockquote class="text-gray-700 dark:text-gray-300 leading-relaxed">
            "{testimonial.quote}"
          </blockquote>
        </div>

        <!-- Author -->
        <div class="flex items-center">
          <div class="w-12 h-12 bg-gradient-to-br from-primary/20 to-primary/10 rounded-full flex items-center justify-center mr-4">
            <span class="text-primary font-semibold text-lg">
              {testimonial.author.split(' ').map(n => n[0]).join('')}
            </span>
          </div>
          <div>
            <div class="font-semibold text-gray-900 dark:text-white">
              {testimonial.author}
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400">
              {testimonial.role}
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- GitHub Link Section -->
  <div class="mt-12 text-center">
    <div class="inline-flex items-center px-6 py-3 bg-gray-50 dark:bg-gray-800 rounded-whph-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
      <svg class="w-5 h-5 mr-3 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
      </svg>
      <div class="text-left">
        <div class="text-sm font-medium text-gray-900 dark:text-white">
          Join our open source community
        </div>
        <div class="text-xs text-gray-600 dark:text-gray-400">
          Star us on GitHub and contribute to the project
        </div>
      </div>
    </div>
  </div>
</div>