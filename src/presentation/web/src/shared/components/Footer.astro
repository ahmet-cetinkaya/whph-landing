---
import Container from './ui/Container.astro';
import AnimatedSection from '../../core/acore-astro/src/components/AnimatedSection.astro';

interface Props {
  t: (key: string, params?: Record<string, any>) => string;
  currentYear: number;
}

const { t, currentYear } = Astro.props;
---

<footer class="border-t border-divider py-8 dark:border-dark-divider">
  <Container>
    <div class="flex flex-col items-center justify-between gap-4 md:flex-row">
      <div class="flex items-center gap-6">
        <span class="text-lg font-semibold text-primary transition-all duration-200 hover:scale-105"
          >WHPH</span
        >
        <div class="flex items-center gap-4 text-sm">
          <a
            href="https://github.com/ahmet-cetinkaya/whph"
            class="text-text-secondary transition-all duration-200 hover:scale-105 hover:text-primary dark:text-dark-secondary"
          >
            {t('footer.links.github')}
          </a>
          <a
            href="https://github.com/ahmet-cetinkaya/whph/discussions"
            class="text-text-secondary transition-all duration-200 hover:scale-105 hover:text-primary dark:text-dark-secondary"
          >
            {t('footer.links.community')}
          </a>
          <a
            href="https://github.com/ahmet-cetinkaya/whph/blob/main/LICENSE"
            class="text-text-secondary transition-all duration-200 hover:scale-105 hover:text-primary dark:text-dark-secondary"
          >
            {t('footer.links.license')}
          </a>
          <a
            href="mailto:contact@ahmetcetinkaya.me"
            class="text-text-secondary transition-all duration-200 hover:scale-105 hover:text-primary dark:text-dark-secondary"
          >
            {t('footer.links.contact')}
          </a>
        </div>
      </div>
      <p class="text-sm text-text-secondary dark:text-dark-secondary">
        {t('footer.copyright', { year: currentYear })}
      </p>
    </div>
  </Container>
</footer>
