---
export interface Props {
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
  background?: 'default' | 'surface-1' | 'gradient';
  id?: string;
}

const { class: className = '', padding = 'md', background = 'default', id, ...rest } = Astro.props;

const paddings = {
  sm: 'py-section-sm',
  md: 'py-section',
  lg: 'py-6 lg:py-20',
};

const backgrounds = {
  default: 'bg-white dark:bg-black',
  'surface-1': 'bg-gray-50 dark:bg-gray-900',
  gradient: 'bg-gradient-to-br from-white to-gray-50 dark:from-black dark:to-gray-900',
};

const classes = `${paddings[padding]} ${backgrounds[background]} ${className}`;
---

<section class={classes} id={id} {...rest}>
  <slot />
</section>
