---
export interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { class: className = '', size = 'lg', ...rest } = Astro.props;

const sizes = {
  sm: 'max-w-2xl',
  md: 'max-w-4xl',
  lg: 'max-w-container',
  xl: 'max-w-7xl',
};

const classes = `mx-auto px-6 ${sizes[size]} ${className}`;
---

<div class={classes} {...rest}>
  <slot />
</div>
