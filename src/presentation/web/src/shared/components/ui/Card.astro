---
export interface Props {
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
}

const { class: className = '', padding = 'md', ...rest } = Astro.props;

const baseClasses = 'bg-white dark:bg-dark-surface-1 rounded-whph shadow-sm';

const paddings = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const classes = `${baseClasses} ${paddings[padding]} ${className}`;
---

<div class={classes} {...rest}>
  <slot />
</div>
