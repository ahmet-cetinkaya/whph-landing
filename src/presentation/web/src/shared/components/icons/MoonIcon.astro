---
export interface Props {
  class?: string;
  size?: string;
  color?: string;
}

const { 
  class: className = "w-5 h-5", 
  size,
  color = "currentColor"
} = Astro.props;

const sizeClass = size ? `w-${size} h-${size}` : className;
---

<svg 
  class={sizeClass} 
  fill="none" 
  stroke={color} 
  viewBox="0 0 24 24"
>
