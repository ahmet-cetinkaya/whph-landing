---
export interface Props {
  class?: string;
  size?: string;
  color?: string;
  strokeWidth?: string;
}

const { 
  class: className = "w-6 h-6", 
  size,
  color = "currentColor",
  strokeWidth = "2"
} = Astro.props;

const sizeClass = size ? `w-${size} h-${size}` : className;
---

<svg 
  class={sizeClass} 
  fill="none" 
  stroke={color} 
  viewBox="0 0 24 24" 
  stroke-width={strokeWidth}
>
