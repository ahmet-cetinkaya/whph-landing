---
import AnimatedSection from '../../core/acore-astro/src/components/AnimatedSection.astro';
import DesktopIcon from '../../shared/components/icons/DesktopIcon.astro';
import LaptopIcon from '../../shared/components/icons/LaptopIcon.astro';
import SyncIcon from '../../shared/components/icons/SyncIcon.astro';

interface Props {
  t: (key: string, params?: Record<string, any>) => string;
}

const { t } = Astro.props;
---

<AnimatedSection animation="fade-up" delay={400}>
  <div class="feature-card bg-white dark:bg-gray-800 rounded-whph shadow-sm p-6 text-center space-y-4 transition-all duration-500 hover:-translate-y-2 hover:scale-105 group cursor-pointer relative overflow-hidden h-full flex flex-col">
    <!-- Animated connection lines background -->
    <div class="absolute inset-0 opacity-0 group-hover:opacity-60 transition-opacity duration-500">
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-indigo-50/20 to-primary/5"></div>
      <!-- Connection dots and lines -->
      <div class="absolute top-4 left-4 w-2 h-2 bg-indigo-400 rounded-full animate-ping"></div>
      <div class="absolute top-6 left-6 w-16 h-0.5 bg-indigo-300/60 animate-pulse"></div>
      <div class="absolute top-4 right-4 w-2 h-2 bg-primary rounded-full animate-ping" style="animation-delay: 500ms"></div>
      <div class="absolute bottom-6 left-8 w-12 h-0.5 bg-purple-300/60 animate-pulse" style="animation-delay: 800ms"></div>
      <div class="absolute bottom-4 right-6 w-2 h-2 bg-purple-400 rounded-full animate-ping" style="animation-delay: 1000ms"></div>
    </div>
    
    <!-- Floating device icons -->
    <div class="absolute top-2 left-2 opacity-0 group-hover:opacity-70 transition-all duration-300 delay-200">
      <!-- Desktop icon -->
      <DesktopIcon class="text-indigo-500 animate-bounce" />
    </div>
    <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-70 transition-all duration-300 delay-400" style="animation-delay: 200ms">
      <!-- Laptop icon -->
      <LaptopIcon class="text-primary animate-bounce" />
    </div>
    <div class="absolute bottom-2 left-3 opacity-0 group-hover:opacity-70 transition-all duration-300 delay-600" style="animation-delay: 400ms">
      <!-- Sync icon -->
      <SyncIcon class="w-3 h-3 text-purple-500 animate-bounce" />
    </div>
    
    <div class="relative z-10 flex flex-col h-full justify-between">
      <div class="space-y-4">
        <div class="w-12 h-12 bg-primary/20 rounded-whph mx-auto flex items-center justify-center transition-all duration-500 group-hover:bg-indigo-100 group-hover:scale-125 group-hover:rotate-6 group-hover:shadow-lg">
          <SyncIcon class="w-6 h-6 text-primary transition-all duration-500 group-hover:scale-110 group-hover:text-indigo-600 sync-icon-draw" />
        </div>
        <h3 class="text-card-title transition-all duration-300 group-hover:text-indigo-600 group-hover:scale-105">{t('features.crossPlatform.title')}</h3>
      </div>
      <p class="text-text-secondary dark:text-dark-secondary transition-all duration-300 group-hover:text-text-primary group-hover:dark:text-dark-primary mt-4">
        {t('features.crossPlatform.description')}
      </p>
    </div>
  </div>
</AnimatedSection>