---
import AnimatedSection from '../../core/acore-astro/src/components/AnimatedSection.astro';
import DesktopIcon from '../../shared/components/icons/DesktopIcon.astro';
import LaptopIcon from '../../shared/components/icons/LaptopIcon.astro';
import SyncIcon from '../../shared/components/icons/SyncIcon.astro';

interface Props {
  t: (key: string, params?: Record<string, any>) => string;
}

const { t } = Astro.props;
---

<AnimatedSection animation="fade-up" delay={400}>
  <div
    class="feature-card group rounded-whph relative flex h-full cursor-pointer flex-col space-y-4 overflow-hidden bg-white p-6 text-center shadow-sm transition-all duration-500 hover:-translate-y-2 hover:scale-105 dark:bg-gray-800"
  >
    <!-- Animated connection lines background -->
    <div class="absolute inset-0 opacity-0 transition-opacity duration-500 group-hover:opacity-60">
      <div
        class="to-primary/5 absolute top-0 left-0 h-full w-full bg-gradient-to-br from-indigo-50/20"
      >
      </div>
      <!-- Connection dots and lines -->
      <div class="absolute top-4 left-4 h-2 w-2 animate-ping rounded-full bg-indigo-400"></div>
      <div class="absolute top-6 left-6 h-0.5 w-16 animate-pulse bg-indigo-300/60"></div>
      <div
        class="bg-primary absolute top-4 right-4 h-2 w-2 animate-ping rounded-full"
        style="animation-delay: 500ms"
      >
      </div>
      <div
        class="absolute bottom-6 left-8 h-0.5 w-12 animate-pulse bg-purple-300/60"
        style="animation-delay: 800ms"
      >
      </div>
      <div
        class="absolute right-6 bottom-4 h-2 w-2 animate-ping rounded-full bg-purple-400"
        style="animation-delay: 1000ms"
      >
      </div>
    </div>

    <!-- Floating device icons -->
    <div
      class="absolute top-2 left-2 opacity-0 transition-all delay-200 duration-300 group-hover:opacity-70"
    >
      <!-- Desktop icon -->
      <DesktopIcon class="animate-bounce text-indigo-500" />
    </div>
    <div
      class="absolute top-2 right-2 opacity-0 transition-all delay-400 duration-300 group-hover:opacity-70"
      style="animation-delay: 200ms"
    >
      <!-- Laptop icon -->
      <LaptopIcon class="text-primary animate-bounce" />
    </div>
    <div
      class="absolute bottom-2 left-3 opacity-0 transition-all delay-600 duration-300 group-hover:opacity-70"
      style="animation-delay: 400ms"
    >
      <!-- Sync icon -->
      <SyncIcon class="h-3 w-3 animate-bounce text-purple-500" />
    </div>

    <div class="relative z-10 flex h-full flex-col justify-between">
      <div class="space-y-4">
        <div
          class="rounded-whph bg-primary/20 mx-auto flex h-12 w-12 items-center justify-center transition-all duration-500 group-hover:scale-125 group-hover:rotate-6 group-hover:bg-indigo-100 group-hover:shadow-lg"
        >
          <SyncIcon
            class="sync-icon-draw text-primary h-6 w-6 transition-all duration-500 group-hover:scale-110 group-hover:text-indigo-600"
          />
        </div>
        <h3
          class="text-card-title transition-all duration-300 group-hover:scale-105 group-hover:text-indigo-600"
        >
          {t('features.crossPlatform.title')}
        </h3>
      </div>
      <p
        class="text-text-secondary group-hover:text-text-primary dark:text-dark-secondary group-hover:dark:text-dark-primary mt-4 transition-all duration-300"
      >
        {t('features.crossPlatform.description')}
      </p>
    </div>
  </div>
</AnimatedSection>
