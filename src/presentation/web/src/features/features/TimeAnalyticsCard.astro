---
import AnimatedSection from '../../core/acore-astro/src/components/AnimatedSection.astro';

interface Props {
  t: (key: string, params?: Record<string, any>) => string;
}

const { t } = Astro.props;
---

<AnimatedSection animation="fade-up" delay={300}>
  <div
    class="feature-card group relative flex h-full cursor-pointer flex-col space-y-4 overflow-hidden rounded-whph bg-white p-6 text-center shadow-sm transition-all duration-500 hover:-translate-y-2 hover:scale-105 dark:bg-gray-800"
  >
    <!-- Animated chart background with dynamic bars -->
    <div class="absolute inset-0 opacity-0 transition-opacity duration-500 group-hover:opacity-60">
      <div
        class="absolute left-0 top-0 h-full w-full bg-gradient-to-br from-blue-50/20 to-primary/5"
      >
      </div>

      <!-- Enhanced animated bar chart -->
      <div
        class="analytics-chart absolute bottom-6 left-6 right-6 flex h-12 items-end justify-between opacity-50"
      >
        <!-- Monday -->
        <div class="flex flex-col items-center space-y-1">
          <div
            class="chart-bar w-3 rounded-t bg-blue-400/60 transition-all delay-100 duration-1000 group-hover:h-8 group-hover:bg-blue-500/80"
            style="height: 16px;"
          >
          </div>
          <div class="h-1 w-1 rounded-full bg-blue-400/40"></div>
        </div>

        <!-- Tuesday -->
        <div class="flex flex-col items-center space-y-1">
          <div
            class="chart-bar w-3 rounded-t bg-primary/60 transition-all delay-200 duration-1000 group-hover:h-10 group-hover:bg-primary/80"
            style="height: 24px;"
          >
          </div>
          <div class="h-1 w-1 rounded-full bg-primary/40"></div>
        </div>

        <!-- Wednesday -->
        <div class="flex flex-col items-center space-y-1">
          <div
            class="chart-bar w-3 rounded-t bg-purple-400/60 transition-all delay-300 duration-1000 group-hover:h-7 group-hover:bg-purple-500/80"
            style="height: 12px;"
          >
          </div>
          <div class="h-1 w-1 rounded-full bg-purple-400/40"></div>
        </div>

        <!-- Thursday -->
        <div class="flex flex-col items-center space-y-1">
          <div
            class="chart-bar delay-400 w-3 rounded-t bg-green-400/60 transition-all duration-1000 group-hover:h-11 group-hover:bg-green-500/80"
            style="height: 28px;"
          >
          </div>
          <div class="h-1 w-1 rounded-full bg-green-400/40"></div>
        </div>

        <!-- Friday -->
        <div class="flex flex-col items-center space-y-1">
          <div
            class="chart-bar w-3 rounded-t bg-orange-400/60 transition-all delay-500 duration-1000 group-hover:h-9 group-hover:bg-orange-500/80"
            style="height: 20px;"
          >
          </div>
          <div class="h-1 w-1 rounded-full bg-orange-400/40"></div>
        </div>

        <!-- Saturday -->
        <div class="flex flex-col items-center space-y-1">
          <div
            class="chart-bar delay-600 w-3 rounded-t bg-indigo-400/60 transition-all duration-1000 group-hover:h-5 group-hover:bg-indigo-500/80"
            style="height: 8px;"
          >
          </div>
          <div class="h-1 w-1 rounded-full bg-indigo-400/40"></div>
        </div>

        <!-- Sunday -->
        <div class="flex flex-col items-center space-y-1">
          <div
            class="chart-bar w-3 rounded-t bg-pink-400/60 transition-all delay-700 duration-1000 group-hover:h-4 group-hover:bg-pink-500/80"
            style="height: 6px;"
          >
          </div>
          <div class="h-1 w-1 rounded-full bg-pink-400/40"></div>
        </div>
      </div>

      <!-- Chart grid lines -->
      <div class="absolute bottom-6 left-6 right-6 h-12 opacity-20">
        <div class="absolute bottom-0 left-0 right-0 h-px bg-gray-400/50"></div>
        <div class="absolute bottom-3 left-0 right-0 h-px bg-gray-400/30"></div>
        <div class="absolute bottom-6 left-0 right-0 h-px bg-gray-400/30"></div>
        <div class="absolute bottom-9 left-0 right-0 h-px bg-gray-400/30"></div>
      </div>
    </div>

    <div class="relative z-10 flex h-full flex-col justify-between">
      <div class="space-y-4">
        <div
          class="mx-auto flex h-12 w-12 items-center justify-center rounded-whph bg-primary/20 transition-all duration-500 group-hover:-rotate-3 group-hover:scale-125 group-hover:bg-blue-100 group-hover:shadow-lg"
        >
          <svg
            class="chart-icon-draw h-6 w-6 text-primary transition-all duration-500 group-hover:scale-110 group-hover:text-blue-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
            ></path>
          </svg>
        </div>
        <h3
          class="text-card-title transition-all duration-300 group-hover:scale-105 group-hover:text-blue-600"
        >
          {t('features.timeAnalytics.title')}
        </h3>
      </div>
      <p
        class="mt-4 text-text-secondary transition-all duration-300 group-hover:text-text-primary dark:text-dark-secondary group-hover:dark:text-dark-primary"
      >
        {t('features.timeAnalytics.description')}
      </p>
    </div>
  </div>
</AnimatedSection>
