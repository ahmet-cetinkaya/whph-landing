---
import Container from '../../shared/components/ui/Container.astro';
import Section from '../../shared/components/ui/Section.astro';
import AnimatedSection from '../../core/acore-astro/src/components/AnimatedSection.astro';
import TaskManagementCard from './TaskManagementCard.astro';
import HabitTrackingCard from './HabitTrackingCard.astro';
import TimeAnalyticsCard from './TimeAnalyticsCard.astro';
import CrossPlatformCard from './CrossPlatformCard.astro';

interface Props {
  t: (key: string, params?: Record<string, any>) => string;
}

const { t } = Astro.props;
---

<div>
  <Container>
    <AnimatedSection animation="fade-up" delay={0}>
      <div class="mb-12 text-center">
        <h2 class="text-section-title mb-4">{t('features.title')}</h2>
        <p class="text-text-secondary dark:text-dark-secondary mx-auto max-w-2xl text-xl">
          {t('features.subtitle')}
        </p>
      </div>
    </AnimatedSection>
    <div class="grid items-stretch gap-8 md:grid-cols-2 lg:grid-cols-4">
      <TaskManagementCard t={t} />
      <HabitTrackingCard t={t} />
      <TimeAnalyticsCard t={t} />
      <CrossPlatformCard t={t} />
    </div>
  </Container>
</div>
