---
import Container from '../../shared/components/ui/Container.astro';
import Section from '../../shared/components/ui/Section.astro';
import AnimatedSection from '../../core/acore-astro/src/components/AnimatedSection.astro';
import ScreenshotGallery from './ScreenshotGallery.astro';

interface Props {
  t: (key: string, params?: Record<string, any>) => string;
  currentLang?: string;
}

const { t, currentLang } = Astro.props;
---

<div>
  <Container>
    <AnimatedSection animation="fade-up" delay={0}>
      <div class="text-center">
        <h2 class="text-section-title mb-4">{t('screenshots.title')}</h2>
        <p class="text-text-secondary dark:text-dark-secondary mx-auto max-w-2xl text-xl">
          {t('screenshots.subtitle')}
        </p>
      </div>
    </AnimatedSection>

    <AnimatedSection animation="fade-up" delay={200}>
      <ScreenshotGallery t={t} currentLang={currentLang} />
    </AnimatedSection>
  </Container>
</div>
