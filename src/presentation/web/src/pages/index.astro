---
// Default route - show English content with auto-redirect
import LocalizedLayout from '../layouts/LocalizedLayout.astro';
import Container from '../components/ui/Container.astro';
import Section from '../components/ui/Section.astro';
import Button from '../components/ui/Button.astro';
import AnimatedSection from '../core/acore-astro/src/components/AnimatedSection.astro';
import { 
  loadTranslations, 
  createTranslationFunction,
  getCurrentYear
} from '../utils/i18n';

// For the default route, we'll show English content
const currentLang = 'en';
const translations = await loadTranslations(currentLang);
const t = createTranslationFunction(translations);
const currentYear = getCurrentYear();
