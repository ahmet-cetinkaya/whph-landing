# WHPH Landing Page Environment Variables
# Copy this file to .env.local for local development

# Analytics Configuration (Umami)
# Set these values to enable privacy-focused analytics
PUBLIC_UMAMI_WEBSITE_ID=your-website-id-here
PUBLIC_UMAMI_SRC=https://analytics.whph.ahmetcetinkaya.me/script.js
PUBLIC_UMAMI_DOMAINS=whph.ahmetcetinkaya.me,localhost

# Development Settings
# Set to 'true' to enable analytics in development mode
PUBLIC_ENABLE_ANALYTICS=false

# Site Configuration
PUBLIC_SITE_URL=https://whph.ahmetcetinkaya.me

# Optional: Custom analytics events
PUBLIC_TRACK_DOWNLOADS=true
PUBLIC_TRACK_NAVIGATION=true
PUBLIC_TRACK_PERFORMANCE=true